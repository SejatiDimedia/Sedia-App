---
import "../styles/global.css";
import { auth } from "../lib/auth";

interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = "NoltPedia: Arsip Logika & Fundamental Pemrograman.",
} = Astro.props;

const session = await auth.api.getSession({
  headers: Astro.request.headers,
});

import SearchDialog, { SearchTrigger } from "../components/SearchDialog";
import { ClientRouter } from "astro:transitions";
---

<!doctype html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
    <ClientRouter />

    <!-- Google Fonts: Space Grotesk (Headings) & Space Mono (Code/Body) -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&family=Space+Mono:ital,wght@0,400;0,700;1,400&display=swap"
      rel="stylesheet"
    />

    <style>
      body {
        font-family: "Space Mono", monospace;
      }
      h1,
      h2,
      h3,
      h4,
      h5,
      h6 {
        font-family: "Space Grotesk", sans-serif;
      }
    </style>
  </head>
  <body class="bg-zinc-50 text-black min-h-screen flex flex-col">
    <SearchDialog client:load />
    <header class="border-b-2 border-black bg-white sticky top-0 z-50">
      <nav
        class="max-w-7xl mx-auto px-6 py-4 flex items-center justify-between"
      >
        <!-- Logo -->
        <a
          href="/"
          class="text-2xl font-bold uppercase tracking-tighter hover:bg-yellow-400 transition-colors px-2 border-4 border-black neo-shadow-sm bg-white"
        >
          Nolt<span class="text-blue-600">Pedia</span>
        </a>

        <!-- Navigation Links -->
        <div class="hidden md:flex gap-8 items-center">
          <a
            href="/docs"
            class="text-sm font-black uppercase tracking-tight hover:text-blue-600 transition-colors"
            >Artikel</a
          >
          <a
            href="/topics"
            class="text-sm font-black uppercase tracking-tight hover:text-blue-600 transition-colors"
            >Topik</a
          >
          <a
            href="/paths"
            class="text-sm font-black uppercase tracking-tight hover:text-blue-600 transition-colors"
            >Alur Belajar</a
          >
          <a
            href="/glossary"
            class="text-sm font-black uppercase tracking-tight hover:text-blue-600 transition-colors"
            >Glosarium</a
          >
        </div>

        <!-- Actions -->
        <div class="flex items-center gap-3">
          <div class="hidden sm:block">
            <SearchTrigger client:idle />
          </div>
          {
            session ? (
              <a
                href="/dashboard"
                class="neo-btn text-xs bg-yellow-400 px-4 py-2 h-[42px] flex items-center justify-center"
              >
                DASBOR
              </a>
            ) : (
              <a
                href="/login"
                class="neo-btn text-xs bg-white px-4 py-2 h-[42px] flex items-center justify-center"
              >
                MASUK
              </a>
            )
          }
        </div>
      </nav>
    </header>

    <main class="flex-1 w-full max-w-7xl mx-auto px-6 py-12">
      <slot />
    </main>

    <footer class="border-t-2 border-black bg-white py-12 mt-auto">
      <div class="max-w-7xl mx-auto px-6 text-center">
        <p class="font-bold mb-4">TANPA JALAN PINTAS. LOGIKA MURNI.</p>
        <p class="text-sm opacity-60">
          &copy; {new Date().getFullYear()} NoltPedia. Dibangun dengan Astro & Neon.
        </p>
      </div>
    </footer>
  </body>
</html>
