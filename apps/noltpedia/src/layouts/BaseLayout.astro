---
import "../styles/global.css";
import { auth } from "../lib/auth";

interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = "NoltPedia: Arsip Logika & Fundamental Pemrograman.",
} = Astro.props;

const session = await auth.api.getSession({
  headers: Astro.request.headers,
});

import SearchDialog, { SearchTrigger } from "../components/SearchDialog";
---

<!doctype html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>

    <!-- Google Fonts: Space Grotesk (Headings) & Space Mono (Code/Body) -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&family=Space+Mono:ital,wght@0,400;0,700;1,400&display=swap"
      rel="stylesheet"
    />

    <style>
      body {
        font-family: "Space Mono", monospace;
      }
      h1,
      h2,
      h3,
      h4,
      h5,
      h6 {
        font-family: "Space Grotesk", sans-serif;
      }
    </style>
  </head>
  <body class="bg-zinc-50 text-black min-h-screen flex flex-col">
    <SearchDialog client:load />
    <header class="border-b-2 border-black bg-white sticky top-0 z-50">
      <nav
        class="max-w-7xl mx-auto px-6 py-4 flex justify-between items-center"
      >
        <a
          href="/"
          class="text-2xl font-bold uppercase tracking-tighter hover:bg-yellow-400 transition-colors px-2 border-2 border-transparent hover:border-black"
        >
          Nolt<span class="text-blue-600">Pedia</span>
        </a>
        <div class="hidden md:flex gap-6 items-center">
          <SearchTrigger client:idle />
          <a
            href="/docs"
            class="font-bold hover:underline decoration-2 underline-offset-4"
            >Library</a
          >
          <a
            href="/topics"
            class="font-bold hover:underline decoration-2 underline-offset-4"
            >Topics</a
          >
          <a
            href="/paths"
            class="font-bold hover:underline decoration-2 underline-offset-4"
            >Paths</a
          >
          <a
            href="/glossary"
            class="font-bold hover:underline decoration-2 underline-offset-4"
            >Glossary</a
          >
        </div>
        <div>
          {
            session ? (
              <div class="flex items-center gap-4">
                <span class="font-bold hidden md:inline">
                  {session.user.name}
                </span>
                <a href="/dashboard" class="neo-btn text-sm bg-yellow-400">
                  Dashboard
                </a>
              </div>
            ) : (
              <a href="/login" class="neo-btn text-sm">
                Masuk
              </a>
            )
          }
        </div>
      </nav>
    </header>

    <main class="flex-1 w-full max-w-7xl mx-auto px-6 py-12">
      <slot />
    </main>

    <footer class="border-t-2 border-black bg-white py-12 mt-auto">
      <div class="max-w-7xl mx-auto px-6 text-center">
        <p class="font-bold mb-4">NO SHORTCUTS. PURE LOGIC.</p>
        <p class="text-sm opacity-60">
          &copy; {new Date().getFullYear()} NoltPedia. Built with Astro & Neon.
        </p>
      </div>
    </footer>
  </body>
</html>
