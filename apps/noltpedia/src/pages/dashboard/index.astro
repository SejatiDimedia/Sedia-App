---
import AdminLayout from "../../layouts/AdminLayout.astro";
import { db, schema, eq, sqlOp } from "../../lib/db";

const topicsCount = await db
    .select({ count: sqlOp`count(*)` })
    .from(schema.topics);
const articlesCount = await db
    .select({ count: sqlOp`count(*)` })
    .from(schema.articles)
    .where(eq(schema.articles.isPublished, true));
const draftsCount = await db
    .select({ count: sqlOp`count(*)` })
    .from(schema.articles)
    .where(eq(schema.articles.isPublished, false));

const totalTopics = Number(topicsCount[0]?.count || 0);
const publishedArticles = Number(articlesCount[0]?.count || 0);
const pendingDrafts = Number(draftsCount[0]?.count || 0);
---

<AdminLayout title="Ringkasan Dasbor">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="neo-card p-6 bg-white shadow-none border-2 border-black">
            <h3 class="text-sm font-bold uppercase opacity-60 mb-2">
                Total Topik
            </h3>
            <p class="text-5xl font-black">{totalTopics}</p>
            <a
                href="/dashboard/topics"
                class="text-[10px] font-bold uppercase mt-4 block hover:underline"
                >Kelola Topik →</a
            >
        </div>

        <div class="neo-card p-6 bg-white shadow-none border-2 border-black">
            <h3 class="text-sm font-bold uppercase opacity-60 mb-2">
                Artikel Terbit
            </h3>
            <p class="text-5xl font-black">{publishedArticles}</p>
            <a
                href="/dashboard/articles"
                class="text-[10px] font-bold uppercase mt-4 block hover:underline"
                >Lihat Artikel →</a
            >
        </div>

        <div
            class="neo-card p-6 bg-yellow-300 shadow-none border-2 border-black"
        >
            <h3 class="text-sm font-bold uppercase opacity-60 mb-2">
                Konten Draf
            </h3>
            <p class="text-5xl font-black">{pendingDrafts}</p>
            <a
                href="/dashboard/articles"
                class="text-[10px] font-bold uppercase mt-4 block hover:underline"
                >Selesaikan Penulisan →</a
            >
        </div>
    </div>

    <div class="mt-12">
        <div class="neo-card p-8 bg-zinc-50 border-dashed">
            <h2 class="text-2xl font-bold mb-4">Aksi Cepat</h2>
            <div class="flex gap-4">
                <a
                    href="/dashboard/topics"
                    class="neo-btn bg-black text-white hover:bg-zinc-800"
                >
                    + Topik Baru
                </a>
                <a
                    href="/dashboard/articles/new"
                    class="neo-btn bg-blue-600 text-white hover:bg-blue-700"
                >
                    + Tulis Artikel
                </a>
            </div>
        </div>
    </div>
</AdminLayout>
