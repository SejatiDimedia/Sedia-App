---
import "../../styles/global.css";
import Sidebar from "../../components/dashboard/Sidebar";
import Header from "../../components/dashboard/Header";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="description" content="SediaArcive Settings" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap"
            rel="stylesheet"
        />
        <title>Settings | SediaArcive</title>
    </head>
    <body class="min-h-screen bg-zinc-50 text-zinc-900 antialiased font-sans">
        <div class="min-h-screen bg-gray-50">
            <Sidebar activePage="settings" client:load />
            <div class="ml-64 transition-all duration-300">
                <Header title="Settings" client:load />
                <main class="p-6">
                    <div
                        class="bg-white border border-gray-200 rounded-2xl p-12 shadow-sm text-center"
                    >
                        <svg
                            class="w-16 h-16 mx-auto text-gray-300 mb-4"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="1.5"
                                d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"
                            ></path>
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="1.5"
                                d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        </svg>
                        <h2 class="text-xl font-semibold text-gray-900 mb-2">
                            Settings
                        </h2>
                        <p class="text-gray-500">
                            Coming soon - Configure your account and
                            preferences.
                        </p>
                    </div>
                </main>
            </div>
        </div>
    </body>
</html>
