---
const features = [
  {
    icon: "layout",
    title: "Flexible Views",
    description: "Switch between Grid and List views to suit your workflow. Manage your files your way.",
  },
  {
    icon: "info",
    title: "Rich File Details",
    description: "Get instant insights. View metadata, sizes, and specific details via the integrated sidebar.",
  },
  {
    icon: "folder",
    title: "Smart Organization",
    description: "Keep everything tidy with nested folders, breadcrumb navigation, and starred favorites.",
  },
  {
    icon: "eye",
    title: "Instant Preview",
    description: "View images, videos, and PDFs directly in the browser without downloading extra software.",
  },
  {
    icon: "trash",
    title: "Trash & Recovery",
    description: "Accidentally deleted a file? No problem. Restore files from the trash or permanently delete them.",
  },
  {
    icon: "shield",
    title: "Secure & Reliable",
    description: "Powered by Cloudflare R2. Your data is encrypted and stored safely with zero egress fees.",
  },
];

const iconPaths: Record<string, string> = {
  folder: "M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z",
  shield: "M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z",
  layout: "M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z",
  info: "M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z",
  eye: "M15 12a3 3 0 11-6 0 3 3 0 016 0z M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z",
  trash: "M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16",
};
---

<section id="features" class="py-32 bg-zinc-50 relative overflow-hidden">
  <!-- Decorative blobs -->
  <div class="absolute left-0 top-1/4 w-[500px] h-[500px] bg-primary-200/20 rounded-full blur-[100px] -z-10 mix-blend-multiply"></div>
  <div class="absolute right-0 bottom-1/4 w-[500px] h-[500px] bg-violet-200/20 rounded-full blur-[100px] -z-10 mix-blend-multiply"></div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center max-w-2xl mx-auto mb-20">
      <h2 class="text-3xl sm:text-5xl font-black text-zinc-900 tracking-tight mb-6">
        Essential features. <br/>
        <span class="text-transparent bg-clip-text bg-gradient-to-b from-zinc-600 to-zinc-900">Proven reliability.</span>
      </h2>
      <p class="text-base sm:text-lg text-zinc-600">
        Engineered for speed, security, and simplicity. A modern file system for today's needs.
      </p>
    </div>

    <!-- Bento Grid -->
    <div class="grid grid-cols-1 md:grid-cols-6 gap-6 auto-rows-[minmax(0,auto)]">
      {features.map((feature, i) => (
        <div class={`
          group relative p-8 rounded-3xl border border-zinc-200 bg-white/80 backdrop-blur-sm 
          hover:bg-white hover:border-primary-200 transition-all duration-300 overflow-hidden shadow-sm hover:shadow-xl hover:shadow-primary-100/20
          ${i === 0 || i === 3 ? 'md:col-span-4' : 'md:col-span-2'}
          ${i === 1 || i === 4 ? 'md:col-span-2' : ''}
        `}>
          <!-- Glow Reveal on Hover -->
          <div class="absolute inset-0 bg-gradient-to-br from-primary-50/50 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          
          <!-- Icon -->
          <div class="w-12 h-12 bg-primary-50 rounded-2xl flex items-center justify-center mb-6 ring-1 ring-primary-100 group-hover:scale-110 transition-transform duration-300 relative z-10">
            <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d={iconPaths[feature.icon]} />
            </svg>
          </div>

          <!-- Content -->
          <div class="relative z-10">
            <h3 class="text-xl font-bold text-zinc-900 mb-3 group-hover:text-primary-700 transition-colors">{feature.title}</h3>
            <p class="text-zinc-600 group-hover:text-zinc-700 transition-colors leading-relaxed">
              {feature.description}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
