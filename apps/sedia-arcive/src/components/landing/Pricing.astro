---
import Button from "../ui/Button.astro";

const plans = [
  {
    name: "Starter",
    price: "Free",
    description: "Perfect for personal projects and small archives.",
    features: ["5 GB Storage", "100 files/month", "Basic organization", "Community support"],
    cta: "Get Started",
    featured: false,
  },
  {
    name: "Pro",
    price: "$12",
    period: "/month",
    description: "For professionals who need more power and features.",
    features: ["100 GB Storage", "Unlimited uploads", "AI organization", "Priority support", "API access", "Team sharing"],
    cta: "Start Free Trial",
    featured: true,
  },
  {
    name: "Enterprise",
    price: "Custom",
    description: "For organizations with advanced security needs.",
    features: ["Unlimited storage", "SSO & SAML", "Audit logs", "Dedicated support", "Custom integrations", "SLA guarantee"],
    cta: "Contact Sales",
    featured: false,
  },
];
---

<section id="pricing" class="py-24 bg-zinc-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center max-w-2xl mx-auto mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold text-zinc-900 tracking-tight">
        Simple, transparent pricing
      </h2>
      <p class="mt-4 text-lg text-zinc-600">
        Choose the plan that's right for you. No hidden fees, ever.
      </p>
    </div>

    <!-- Pricing Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto">
      {plans.map((plan) => (
        <div class={`relative bg-white rounded-2xl p-8 transition-all duration-300 ${plan.featured ? "ring-2 ring-primary-500 shadow-xl scale-105" : "border border-zinc-200 hover:border-zinc-300 hover:shadow-lg"}`}>
          {plan.featured && (
            <div class="absolute -top-4 left-1/2 -translate-x-1/2">
              <span class="bg-primary-500 text-white text-xs font-semibold px-3 py-1 rounded-full">
                Most Popular
              </span>
            </div>
          )}

          <div class="text-center">
            <h3 class="text-lg font-semibold text-zinc-900">{plan.name}</h3>
            <div class="mt-4 flex items-baseline justify-center gap-1">
              <span class="text-4xl font-bold text-zinc-900">{plan.price}</span>
              {plan.period && <span class="text-zinc-500">{plan.period}</span>}
            </div>
            <p class="mt-2 text-sm text-zinc-600">{plan.description}</p>
          </div>

          <ul class="mt-8 space-y-3">
            {plan.features.map((feature) => (
              <li class="flex items-center gap-3 text-sm text-zinc-700">
                <svg class="w-5 h-5 text-primary-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                {feature}
              </li>
            ))}
          </ul>

          <div class="mt-8">
            <Button variant={plan.featured ? "primary" : "secondary"} class="w-full" href="/dashboard">
              {plan.cta}
            </Button>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
