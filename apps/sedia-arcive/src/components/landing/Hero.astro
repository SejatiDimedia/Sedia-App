---
import Button from "../ui/Button.astro";
---

<section class="relative pt-32 pb-20 sm:pt-48 sm:pb-32 bg-white">
  <!-- Background Elements (Clipped) -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <!-- Dynamic Background -->
    <div
      class="absolute inset-0 bg-[url('/grid.svg')] bg-center [mask-image:linear-gradient(180deg,black,rgba(255,255,255,0))] opacity-[0.03]"
    >
    </div>
    <div
      class="absolute top-0 left-1/2 -translate-x-1/2 w-[1000px] h-[500px] bg-sky-200/20 rounded-[100%] blur-[120px] -z-10 mix-blend-multiply"
    >
    </div>
    <div
      class="absolute bottom-0 right-0 w-[800px] h-[600px] bg-sky-100/40 rounded-full blur-[100px] -z-10 mix-blend-multiply"
    >
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-8 items-center">
      <!-- Left Column: Content -->
      <div class="text-center lg:text-left max-w-2xl mx-auto lg:mx-0">
        <!-- Badge -->
        <div
          class="inline-flex items-center gap-2 px-3 py-1.5 sm:px-4 sm:py-2 bg-sky-50 border border-sky-100 rounded-full mb-6 sm:mb-8 shadow-sm hover:bg-sky-100 transition-colors cursor-default group"
        >
          <span class="flex h-2 w-2 relative">
            <span
              class="animate-ping absolute inline-flex h-full w-full rounded-full bg-sky-400 opacity-75"
            ></span>
            <span class="relative inline-flex rounded-full h-2 w-2 bg-sky-500"
            ></span>
          </span>
          <span
            class="text-xs sm:text-sm font-medium text-sky-700 group-hover:text-sky-800 transition-colors"
            >Part of SejatiDimedia Ecosystem</span
          >
        </div>

        <!-- Headline -->
        <h1
          class="text-4xl sm:text-6xl lg:text-7xl font-black text-zinc-900 tracking-tighter leading-[1.1] sm:leading-[1.1] mb-6 sm:mb-8"
        >
          Store files. <br />
          <span
            class="text-transparent bg-clip-text bg-gradient-to-r from-sky-600 via-sky-400 to-sky-600 animate-text-shimmer bg-[length:200%_auto]"
          >
            Share instantly.
          </span>
        </h1>

        <!-- Subheadline -->
        <p
          class="text-base sm:text-xl text-zinc-600 mb-8 sm:mb-12 leading-relaxed"
        >
          The archive platform for the <span class="text-zinc-900 font-medium"
            >next generation</span
          >. Zero-knowledge encryption meets lightspeed R2 storage.
        </p>

        <!-- CTA Buttons -->
        <div
          class="flex flex-col sm:flex-row items-center lg:items-start justify-center lg:justify-start gap-4 sm:gap-6"
        >
          <a
            href="/dashboard"
            class="group relative px-6 py-3 sm:px-8 sm:py-4 bg-zinc-900 text-white font-bold rounded-full text-base sm:text-lg shadow-xl hover:shadow-2xl hover:-translate-y-1 transition-all duration-300 w-full sm:w-auto text-center"
          >
            Get Started Now
            <div
              class="absolute inset-0 rounded-full ring-2 ring-zinc-900/5 group-hover:ring-zinc-900/10 transition-all"
            >
            </div>
          </a>
          <a
            href="#features"
            class="px-6 py-3 sm:px-8 sm:py-4 text-zinc-600 font-medium hover:text-zinc-900 transition-colors flex items-center justify-center gap-2 group w-full sm:w-auto text-center"
          >
            Explore Features
            <svg
              class="w-4 h-4 group-hover:translate-x-1 transition-transform"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
            </svg>
          </a>
        </div>
      </div>

      <!-- Right Column: Dashboard Mockup -->
      <!-- Right Column: Abstract App Visual -->
      <div
        class="relative perspective-[2000px] w-full max-w-[600px] mx-auto lg:ml-auto lg:mr-0 pl-4 lg:pl-12"
      >
        <!-- Main Composition Container -->
        <div
          class="relative aspect-square sm:aspect-[4/3] lg:aspect-square w-full transform transition-all duration-700 hover:rotate-y-6 hover:rotate-x-2 flex items-center justify-center"
        >
          <!-- Glows -->
          <div
            class="absolute inset-0 bg-gradient-to-tr from-sky-200/40 via-primary-200/40 to-violet-200/40 rounded-full blur-[80px] -z-10 animate-pulse-slow"
          >
          </div>

          <!-- Back Card: Storage Status (The "Vault") -->
          <div
            class="absolute inset-x-12 inset-y-16 sm:inset-x-20 sm:inset-y-20 bg-white/90 backdrop-blur-xl border border-white/60 rounded-[2.5rem] shadow-2xl shadow-sky-900/10 z-10 rotate-[-6deg] flex flex-col p-6 sm:p-8 animate-float"
          >
            <div class="flex items-center justify-between mb-8">
              <div class="flex items-center gap-3">
                <div
                  class="w-12 h-12 rounded-2xl bg-sky-100/50 flex items-center justify-center text-sky-600"
                >
                  <svg
                    class="w-6 h-6"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                    ><path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"
                    ></path></svg
                  >
                </div>
                <div>
                  <div class="text-sm font-bold text-zinc-800">
                    Main Storage
                  </div>
                  <div class="text-xs text-zinc-500">Encrypted â€¢ R2</div>
                </div>
              </div>
              <div
                class="text-xs font-mono text-zinc-400 bg-zinc-50 px-2 py-1 rounded"
              >
                PRO
              </div>
            </div>

            <!-- Storage Bar Visualization -->
            <div class="space-y-4 mb-auto">
              <div class="flex justify-between items-end">
                <div class="text-2xl sm:text-3xl font-black text-zinc-900">
                  84<span class="text-lg text-zinc-400 font-medium">GB</span>
                </div>
              </div>
              <div
                class="h-3 w-full bg-zinc-100 rounded-full overflow-hidden flex"
              >
                <div class="h-full bg-sky-500 w-[45%]"></div>
                <div class="h-full bg-violet-500 w-[20%]"></div>
                <div class="h-full bg-orange-400 w-[15%]"></div>
              </div>
              <div class="flex gap-4 text-xs font-medium text-zinc-500">
                <div class="flex items-center gap-1.5">
                  <div class="w-2 h-2 rounded-full bg-sky-500"></div>Images
                </div>
                <div class="flex items-center gap-1.5">
                  <div class="w-2 h-2 rounded-full bg-violet-500"></div>Video
                </div>
                <div class="flex items-center gap-1.5">
                  <div class="w-2 h-2 rounded-full bg-orange-400"></div>Docs
                </div>
              </div>
            </div>
          </div>

          <!-- Front Card: File Preview (The "Content") -->
          <div
            class="absolute top-10 right-4 sm:-right-4 w-48 sm:w-56 bg-white rounded-2xl shadow-xl border border-zinc-100 p-3 z-30 rotate-[6deg] animate-float-delayed"
          >
            <div
              class="aspect-[4/3] rounded-xl bg-zinc-100 mb-3 relative overflow-hidden group"
            >
              <div
                class="absolute inset-0 bg-gradient-to-br from-zinc-200 to-zinc-300"
              >
              </div>
              <!-- Play Icon -->
              <div class="absolute inset-0 flex items-center justify-center">
                <div
                  class="w-10 h-10 bg-white/30 backdrop-blur rounded-full flex items-center justify-center pl-1 group-hover:bg-white/50 transition-colors"
                >
                  <svg
                    class="w-4 h-4 text-zinc-800"
                    fill="currentColor"
                    viewBox="0 0 24 24"><path d="M8 5v14l11-7z"></path></svg
                  >
                </div>
              </div>
            </div>
            <div class="px-1">
              <div class="h-2 w-2/3 bg-zinc-200 rounded mb-2"></div>
              <div class="flex items-center justify-between">
                <div class="h-1.5 w-1/4 bg-zinc-100 rounded"></div>
                <div class="text-[10px] text-zinc-400">24MB</div>
              </div>
            </div>
          </div>

          <!-- Floating Card: Sharing (The "Action") -->
          <div
            class="absolute bottom-12 -left-4 sm:-left-12 bg-white rounded-xl shadow-xl shadow-indigo-500/10 border border-indigo-50 p-4 z-40 animate-float w-auto flex items-center gap-4"
          >
            <div class="flex -space-x-3">
              <div
                class="w-8 h-8 rounded-full border-2 border-white bg-pink-400"
              >
              </div>
              <div
                class="w-8 h-8 rounded-full border-2 border-white bg-teal-400"
              >
              </div>
              <div
                class="w-8 h-8 rounded-full border-2 border-white bg-zinc-100 flex items-center justify-center text-xs font-bold text-zinc-600"
              >
                +3
              </div>
            </div>
            <div>
              <div class="text-xs font-bold text-zinc-800">
                Shared with team
              </div>
              <div class="text-[10px] text-zinc-500 flex items-center gap-1">
                <svg
                  class="w-3 h-3 text-green-500"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                  ></path></svg
                >
                Link copied
              </div>
            </div>
          </div>

          <!-- Decorative Elements -->
          <div
            class="absolute top-1/2 right-10 bg-primary-600 text-white text-xs font-bold px-3 py-1.5 rounded-full shadow-lg shadow-primary-500/30 z-30 rotate-12"
          >
            100% Secure
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .perspective-\[2000px\] {
    perspective: 2000px;
  }
  .rotate-x-6 {
    transform: rotateX(6deg);
  }
  .rotate-x-12 {
    transform: rotateX(12deg);
  }
  .hover\:rotate-x-2:hover {
    transform: rotateX(2deg);
  }
  @keyframes float {
    0%,
    100% {
      transform: translateY(0px) translateX(20px);
    }
    50% {
      transform: translateY(-10px) translateX(20px);
    }
  }
  .animate-float {
    animation: float 6s ease-in-out infinite;
  }
  .animate-float-delayed {
    animation: float 6s ease-in-out infinite;
    animation-delay: 2s;
  }
  .animate-pulse-slow {
    animation: pulse 8s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
  /* Mobile optimized float */
  @media (max-width: 640px) {
    @keyframes float {
      0%,
      100% {
        transform: translateY(0px);
      }
      50% {
        transform: translateY(-5px);
      }
    }
    .animate-float {
      transform: none !important; /* Reset translate for mobile flow */
      animation: float 4s ease-in-out infinite;
    }
  }
</style>
