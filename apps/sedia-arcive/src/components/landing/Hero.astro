---
import Button from "../ui/Button.astro";
---

<section class="relative pt-32 pb-20 overflow-hidden">
  <!-- Background Gradient -->
  <div class="absolute inset-0 bg-gradient-to-br from-zinc-50 via-white to-primary-50/30 -z-10"></div>
  <div class="absolute top-20 right-0 w-96 h-96 bg-primary-200/20 rounded-full blur-3xl -z-10"></div>
  <div class="absolute bottom-0 left-0 w-80 h-80 bg-primary-300/10 rounded-full blur-3xl -z-10"></div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center max-w-3xl mx-auto">
      <!-- Badge -->
      <div class="inline-flex items-center gap-2 px-3 py-1.5 bg-primary-50 border border-primary-100 rounded-full text-sm text-primary-700 mb-6">
        <span class="relative flex h-2 w-2">
          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-primary-400 opacity-75"></span>
          <span class="relative inline-flex rounded-full h-2 w-2 bg-primary-500"></span>
        </span>
        Now in Public Beta
      </div>

      <!-- Headline -->
      <h1 class="text-4xl sm:text-5xl lg:text-6xl font-extrabold text-zinc-900 tracking-tight leading-tight">
        Your Digital Archive,
        <span class="bg-gradient-to-r from-primary-600 to-primary-400 bg-clip-text text-transparent">
          Reimagined
        </span>
      </h1>

      <!-- Subheadline -->
      <p class="mt-6 text-lg sm:text-xl text-zinc-600 max-w-2xl mx-auto leading-relaxed">
        Store, organize, and access your files with blazing-fast performance. 
        Built for teams and individuals who demand excellence.
      </p>

      <!-- CTA Buttons -->
      <div class="mt-10 flex flex-col sm:flex-row items-center justify-center gap-4">
        <Button variant="primary" size="lg" href="/dashboard">
          Start Free Trial
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </Button>
        <Button variant="secondary" size="lg" href="#features">
          See How It Works
        </Button>
      </div>

      <!-- Trust Indicators -->
      <div class="mt-12 flex items-center justify-center gap-6 text-sm text-zinc-500">
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
          <span>Free 14-day trial</span>
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
          <span>No credit card required</span>
        </div>
      </div>
    </div>

    <!-- Hero Image Mockup -->
    <div class="mt-16 relative">
      <div class="relative mx-auto max-w-5xl">
        <div class="bg-zinc-900 rounded-xl shadow-2xl overflow-hidden border border-zinc-800">
          <!-- Browser Bar -->
          <div class="flex items-center gap-2 px-4 py-3 bg-zinc-800 border-b border-zinc-700">
            <div class="flex gap-1.5">
              <div class="w-3 h-3 rounded-full bg-red-500"></div>
              <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
              <div class="w-3 h-3 rounded-full bg-green-500"></div>
            </div>
            <div class="flex-1 mx-4">
              <div class="bg-zinc-700 rounded-md px-3 py-1.5 text-sm text-zinc-400 text-center">
                app.sediaarcive.com/dashboard
              </div>
            </div>
          </div>
          <!-- Dashboard Preview -->
          <div class="aspect-video bg-gradient-to-br from-zinc-900 to-zinc-800 p-8">
            <div class="grid grid-cols-4 gap-4 h-full">
              <!-- Sidebar placeholder -->
              <div class="bg-zinc-800/50 rounded-lg p-4 space-y-3">
                <div class="h-8 bg-zinc-700 rounded-md"></div>
                <div class="h-4 bg-zinc-700/50 rounded w-3/4"></div>
                <div class="h-4 bg-zinc-700/50 rounded w-1/2"></div>
                <div class="h-4 bg-zinc-700/50 rounded w-2/3"></div>
              </div>
              <!-- Content area -->
              <div class="col-span-3 space-y-4">
                <div class="grid grid-cols-3 gap-4">
                  <div class="bg-primary-500/20 border border-primary-500/30 rounded-lg p-4">
                    <div class="h-4 bg-primary-500/50 rounded w-1/2 mb-2"></div>
                    <div class="h-8 bg-primary-500/70 rounded w-full"></div>
                  </div>
                  <div class="bg-zinc-800/50 rounded-lg p-4">
                    <div class="h-4 bg-zinc-700 rounded w-1/2 mb-2"></div>
                    <div class="h-8 bg-zinc-700 rounded w-full"></div>
                  </div>
                  <div class="bg-zinc-800/50 rounded-lg p-4">
                    <div class="h-4 bg-zinc-700 rounded w-1/2 mb-2"></div>
                    <div class="h-8 bg-zinc-700 rounded w-full"></div>
                  </div>
                </div>
                <div class="bg-zinc-800/50 rounded-lg flex-1 p-4">
                  <div class="h-4 bg-zinc-700 rounded w-1/4 mb-4"></div>
                  <div class="space-y-2">
                    <div class="h-10 bg-zinc-700/50 rounded"></div>
                    <div class="h-10 bg-zinc-700/50 rounded"></div>
                    <div class="h-10 bg-zinc-700/50 rounded"></div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- Glow effect -->
        <div class="absolute -inset-4 bg-gradient-to-r from-primary-500/20 via-transparent to-primary-500/20 blur-2xl -z-10"></div>
      </div>
    </div>
  </div>
</section>
