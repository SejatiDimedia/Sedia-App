---
import Button from "../ui/Button.astro";
---

<section class="relative pt-32 pb-20 sm:pt-48 sm:pb-32 bg-white">
  <!-- Background Elements (Clipped) -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <!-- Dynamic Background -->
    <div
      class="absolute inset-0 bg-[url('/grid.svg')] bg-center [mask-image:linear-gradient(180deg,black,rgba(255,255,255,0))] opacity-[0.03]"
    >
    </div>
    <div
      class="absolute top-0 left-1/2 -translate-x-1/2 w-[1000px] h-[500px] bg-sky-200/20 rounded-[100%] blur-[120px] -z-10 mix-blend-multiply"
    >
    </div>
    <div
      class="absolute bottom-0 right-0 w-[800px] h-[600px] bg-sky-100/40 rounded-full blur-[100px] -z-10 mix-blend-multiply"
    >
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-8 items-center">
      <!-- Left Column: Content -->
      <div class="text-center lg:text-left max-w-2xl mx-auto lg:mx-0">
        <!-- Badge -->
        <div
          class="inline-flex items-center gap-2 px-3 py-1.5 sm:px-4 sm:py-2 bg-sky-50 border border-sky-100 rounded-full mb-6 sm:mb-8 shadow-sm hover:bg-sky-100 transition-colors cursor-default group"
        >
          <span class="flex h-2 w-2 relative">
            <span
              class="animate-ping absolute inline-flex h-full w-full rounded-full bg-sky-400 opacity-75"
            ></span>
            <span class="relative inline-flex rounded-full h-2 w-2 bg-sky-500"
            ></span>
          </span>
          <span
            class="text-xs sm:text-sm font-medium text-sky-700 group-hover:text-sky-800 transition-colors"
            >Part of SejatiDimedia Ecosystem</span
          >
        </div>

        <!-- Headline -->
        <h1
          class="text-4xl sm:text-6xl lg:text-7xl font-black text-zinc-900 tracking-tighter leading-[1.1] sm:leading-[1.1] mb-6 sm:mb-8"
        >
          Store files. <br />
          <span
            class="text-transparent bg-clip-text bg-gradient-to-r from-sky-600 via-sky-400 to-sky-600 animate-text-shimmer bg-[length:200%_auto]"
          >
            Share instantly.
          </span>
        </h1>

        <!-- Subheadline -->
        <p
          class="text-base sm:text-xl text-zinc-600 mb-8 sm:mb-12 leading-relaxed"
        >
          The archive platform for the <span class="text-zinc-900 font-medium"
            >next generation</span
          >. Zero-knowledge encryption meets lightspeed R2 storage.
        </p>

        <!-- CTA Buttons -->
        <div
          class="flex flex-col sm:flex-row items-center lg:items-start justify-center lg:justify-start gap-4 sm:gap-6"
        >
          <a
            href="/dashboard"
            class="group relative px-6 py-3 sm:px-8 sm:py-4 bg-zinc-900 text-white font-bold rounded-full text-base sm:text-lg shadow-xl hover:shadow-2xl hover:-translate-y-1 transition-all duration-300 w-full sm:w-auto text-center"
          >
            Get Started Now
            <div
              class="absolute inset-0 rounded-full ring-2 ring-zinc-900/5 group-hover:ring-zinc-900/10 transition-all"
            >
            </div>
          </a>
          <a
            href="#features"
            class="px-6 py-3 sm:px-8 sm:py-4 text-zinc-600 font-medium hover:text-zinc-900 transition-colors flex items-center justify-center gap-2 group w-full sm:w-auto text-center"
          >
            Explore Features
            <svg
              class="w-4 h-4 group-hover:translate-x-1 transition-transform"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
            </svg>
          </a>
        </div>
      </div>

      <!-- Right Column: Dashboard Mockup -->
      <div
        class="relative perspective-[2000px] group lg:ml-auto w-full max-w-[600px] lg:max-w-none lg:pr-20"
      >
        <!-- Glow effect behind -->
        <div
          class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[120%] h-[120%] bg-sky-300/20 rounded-full blur-[120px] -z-10 group-hover:bg-sky-300/30 transition-all duration-700"
        >
        </div>

        <!-- Main Container with Tilt -->
        <div
          class="relative transform transition-all duration-700 hover:rotate-x-2 hover:-translate-y-4 rotate-y-6 lg:rotate-y-12 rotate-x-6 scale-[0.85] sm:scale-95 hover:scale-[0.9] sm:hover:scale-100 origin-center"
        >
          <div
            class="bg-white rounded-2xl border border-zinc-200/50 shadow-2xl shadow-zinc-200/50 overflow-hidden ring-1 ring-zinc-900/5"
          >
            <!-- Window Controls (Browser Header) -->
            <div
              class="flex items-center gap-4 px-4 py-3 bg-zinc-50/80 backdrop-blur-sm border-b border-zinc-100"
            >
              <div class="flex gap-1.5">
                <div class="w-3 h-3 rounded-full bg-red-400/80 shadow-sm"></div>
                <div class="w-3 h-3 rounded-full bg-yellow-400/80 shadow-sm">
                </div>
                <div class="w-3 h-3 rounded-full bg-green-400/80 shadow-sm">
                </div>
              </div>

              <!-- Address Bar -->
              <div class="flex-1 max-w-2xl mx-auto hidden sm:block">
                <div
                  class="flex items-center gap-2 px-3 py-1.5 bg-white border border-zinc-200/60 rounded-lg shadow-sm"
                >
                  <svg
                    class="w-3.5 h-3.5 text-zinc-400"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                    ><path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
                    ></path></svg
                  >
                  <span class="text-xs text-zinc-500 font-medium truncate"
                    >sedia.app</span
                  >
                </div>
              </div>
            </div>

            <!-- App Interface -->
            <div class="flex h-[350px] sm:h-[450px] bg-white text-left">
              <!-- Sidebar (Hidden on small mobile) -->
              <div
                class="hidden sm:flex w-48 flex-col border-r border-zinc-100 bg-zinc-50/30 p-3 gap-4"
              >
                <!-- Nav Items -->
                <div class="space-y-1 mt-2">
                  <div
                    class="flex items-center gap-3 px-3 py-2 bg-primary-50/50 text-primary-700 rounded-lg border border-primary-100/50"
                  >
                    <span class="text-sm font-medium">My Files</span>
                  </div>
                  <div class="flex items-center gap-3 px-3 py-2 text-zinc-500">
                    <span class="text-sm font-medium">Shared</span>
                  </div>
                </div>
                <!-- Storage -->
                <div
                  class="mt-auto p-3 bg-white rounded-xl border border-zinc-100 shadow-sm"
                >
                  <div
                    class="w-full bg-zinc-100 rounded-full h-1.5 overflow-hidden"
                  >
                    <div class="bg-primary-500 h-1.5 rounded-full w-3/4"></div>
                  </div>
                </div>
              </div>

              <!-- Main Content Area -->
              <div class="flex-1 flex flex-col min-w-0 bg-white relative">
                <!-- Header -->
                <div
                  class="h-14 border-b border-zinc-50 flex items-center justify-between px-4 sm:px-6"
                >
                  <h3 class="font-bold text-sm sm:text-base text-zinc-800">
                    Designs
                  </h3>
                </div>

                <!-- Files Grid -->
                <div
                  class="p-4 sm:p-6 grid grid-cols-2 gap-3 sm:gap-4 overflow-hidden relative"
                >
                  <!-- File 1 (Active) -->
                  <div
                    class="p-3 sm:p-4 rounded-xl bg-primary-50/30 border border-primary-200 shadow-sm relative"
                  >
                    <div
                      class="aspect-square rounded-lg bg-white mb-2 flex items-center justify-center relative overflow-hidden shadow-inner"
                    >
                      <div
                        class="absolute inset-0 bg-gradient-to-br from-indigo-500 to-purple-500 opacity-80"
                      >
                      </div>
                    </div>
                    <div class="h-2 w-16 bg-zinc-200 rounded-sm"></div>
                  </div>

                  <!-- File 2 -->
                  <div
                    class="p-3 sm:p-4 rounded-xl bg-white border border-zinc-100 shadow-sm"
                  >
                    <div
                      class="aspect-square rounded-lg bg-orange-50 mb-2 flex items-center justify-center"
                    >
                      <svg
                        class="w-6 h-6 text-orange-500"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                        ><path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"
                        ></path></svg
                      >
                    </div>
                    <div class="h-2 w-12 bg-zinc-100 rounded"></div>
                  </div>

                  <!-- Floating Upload Card -->
                  <div
                    class="absolute bottom-4 right-4 bg-white p-3 rounded-xl shadow-xl shadow-zinc-900/10 border border-zinc-100 animate-float z-20 w-48 hidden sm:block"
                  >
                    <div class="flex items-start gap-2">
                      <div
                        class="w-6 h-6 rounded bg-green-50 flex items-center justify-center text-green-600 flex-shrink-0"
                      >
                        <svg
                          class="w-4 h-4"
                          fill="none"
                          viewBox="0 0 24 24"
                          stroke="currentColor"
                          ><path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M5 13l4 4L19 7"></path></svg
                        >
                      </div>
                      <div>
                        <h4 class="text-xs font-bold text-zinc-900">
                          Upload Complete
                        </h4>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .perspective-\[2000px\] {
    perspective: 2000px;
  }
  .rotate-x-6 {
    transform: rotateX(6deg);
  }
  .rotate-x-12 {
    transform: rotateX(12deg);
  }
  .hover\:rotate-x-2:hover {
    transform: rotateX(2deg);
  }
  @keyframes float {
    0%,
    100% {
      transform: translateY(0px) translateX(20px);
    }
    50% {
      transform: translateY(-10px) translateX(20px);
    }
  }
  .animate-float {
    animation: float 6s ease-in-out infinite;
  }
  /* Mobile optimized float */
  @media (max-width: 640px) {
    @keyframes float {
      0%,
      100% {
        transform: translateY(0px);
      }
      50% {
        transform: translateY(-5px);
      }
    }
    .animate-float {
      transform: none !important; /* Reset translate for mobile flow */
      animation: float 4s ease-in-out infinite;
    }
  }
</style>
