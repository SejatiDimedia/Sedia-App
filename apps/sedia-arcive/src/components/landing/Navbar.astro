---
import Button from "../ui/Button.astro";
---

<header
  class="fixed top-0 left-0 right-0 z-50 transition-all duration-300"
  id="main-header"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
    <nav
      class="bg-white/90 backdrop-blur-2xl border border-white/50 ring-1 ring-zinc-200/50 rounded-full px-5 py-3 shadow-xl shadow-zinc-200/20 flex items-center justify-between"
    >
      <!-- Brand -->
      <a
        href="/"
        class="flex items-center gap-0.5 text-xl tracking-tight leading-none group select-none"
      >
        <span class="font-extrabold text-sky-600">Sedia</span>
        <span
          class="font-medium text-slate-600 group-hover:text-slate-900 transition-colors"
          >Arcive</span
        >
        <span class="text-sky-500 font-bold mb-2 text-2xl animate-pulse">.</span
        >
      </a>

      <!-- Desktop Links -->
      <div class="hidden md:flex items-center gap-6">
        <a
          href="#features"
          class="text-sm font-medium text-zinc-600 hover:text-sky-600 transition-colors relative group"
        >
          Features
          <span
            class="absolute -bottom-1 left-0 w-0 h-0.5 bg-sky-600 transition-all group-hover:w-full"
          ></span>
        </a>
        <a
          href="#how-it-works"
          class="text-sm font-medium text-zinc-600 hover:text-sky-600 transition-colors relative group"
        >
          How it Works
          <span
            class="absolute -bottom-1 left-0 w-0 h-0.5 bg-sky-600 transition-all group-hover:w-full"
          ></span>
        </a>
        <a
          href="#faq"
          class="text-sm font-medium text-zinc-600 hover:text-sky-600 transition-colors relative group"
        >
          FAQ
          <span
            class="absolute -bottom-1 left-0 w-0 h-0.5 bg-sky-600 transition-all group-hover:w-full"
          ></span>
        </a>
      </div>

      <!-- Actions -->
      <div class="flex items-center gap-3">
        <a
          href="/login"
          class="text-sm font-medium text-zinc-600 hover:text-zinc-900 transition-colors px-2"
          >Sign In</a
        >
        <Button
          href="/dashboard"
          variant="primary"
          size="sm"
          class="shadow-lg shadow-primary-500/20"
        >
          Get Started
        </Button>
      </div>
    </nav>
  </div>
</header>

<script>
  // Add scroll effect
  const header = document.getElementById("main-header");
  window.addEventListener("scroll", () => {
    if (window.scrollY > 20) {
      header?.classList.add("py-2");
      header?.classList.remove("py-4");
    } else {
      header?.classList.add("py-4");
      header?.classList.remove("py-2");
    }
  });
</script>
