---
import Button from "../ui/Button.astro";
---

<header
  class="fixed top-4 md:top-6 left-0 right-0 z-50 flex justify-center px-4"
>
  <nav
    class="bg-white/80 backdrop-blur-xl border border-zinc-200/50 rounded-full px-4 py-2 md:px-6 md:py-3 shadow-lg shadow-zinc-200/20 ring-1 ring-zinc-900/5 transition-all"
  >
    <div class="flex items-center gap-4 md:gap-8">
      <!-- Logo -->
      <a
        href="/"
        class="flex items-center gap-0.5 text-lg md:text-xl tracking-tight leading-none group"
      >
        <span class="font-extrabold text-sky-600">Sedia</span>
        <span
          class="font-normal text-slate-600 group-hover:text-slate-800 transition-colors"
          >Arcive</span
        >
        <span class="text-sky-500 font-bold mb-1.5 md:mb-2 text-xl md:text-2xl"
          >.</span
        >
      </a>

      <!-- Nav Links -->
      <div class="hidden md:flex items-center gap-1">
        <a
          href="#features"
          class="px-4 py-2 text-sm font-medium text-zinc-600 hover:text-zinc-900 hover:bg-zinc-50 rounded-full transition-all"
          >Features</a
        >
        <a
          href="#about"
          class="px-4 py-2 text-sm font-medium text-zinc-600 hover:text-zinc-900 hover:bg-zinc-50 rounded-full transition-all"
          >About</a
        >
      </div>

      <!-- CTA -->
      <div
        class="flex items-center gap-3 pl-3 md:pl-4 border-l border-zinc-200"
      >
        <a
          href="/login"
          class="text-sm font-medium text-zinc-600 hover:text-zinc-900 transition-colors"
          >Sign In</a
        >
      </div>
    </div>
  </nav>
</header>
